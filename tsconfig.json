{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2018"],
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./src/types/external/"
    ],
    "baseUrl": "."
  },
  "include": [
    "src/",
    "tests/"
  ]
}
